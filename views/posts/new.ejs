<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Post</h1>
    <div class="col-8 offset-2">


        <form action="/posts" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="post[title]" required>
            </div>
            <div>
                <label for="content" class="form-label">Content</label>
                <textarea type="text" class="form-control" rows="10" id="content" name="post[content]" required></textarea>
            </div>
            <button class="mt-3 btn btn-success">Create New Post</button>
        </form>



    </div>
</div>


